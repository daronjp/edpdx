<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-11">
      <h4>Thanks for your purchase! You will recieve an email with the details of your order.</h4>

      <h4>Order Details:</h4>

      <h5>Ship to:</h5>
      <%= params[:stripeShippingName] %><br>
      <%= params[:stripeBillingAddressLine1] %><br>
      <%= params[:stripeShippingAddressCity] %>, <%= params[:stripeShippingAddressState] %>
      <%= params[:stripeShippingAddressZip] %>
    </div>
  </div>
  <p>
  </p>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-4">
      <h5>Items:</h5>
      <table class="table table-bordered">
        <tr>
          <th>
          </th>
          <th>
            Item
          </th>
          <th>
            Quantity
          </th>
          <th>
            Price
          </th>
        </tr>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to product_path(item.product_id) do %>
                <%= image_tag item.product.photos.where(:is_main => 't')[0].avatar.url(:medium), class: "img-responsive" %>
              <% end %>
            </td>
            <td>
              <%= item.product.name %>
            </td>
            <td>
              <%= item.quantity %>
            </td>
            <td>
              $<%= sprintf('%.2f', item.product.price*item.quantity) %>
            </td>
          </tr>
        <% end %>
      </table>
      Total: $<%= sprintf('%.2f', params[:total]) %>
    </div>
    <div class="col-md-7">
    </div>
  </div>
</div>
