<p id="notice"><%= notice %></p>

<h1>Listing Product Notes</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_notes.each do |product_note| %>
      <tr>
        <td><%= product_note.product_id %></td>
        <td><%= product_note.note %></td>
        <td><%= link_to 'Show', product_note %></td>
        <td><%= link_to 'Edit', edit_product_note_path(product_note) %></td>
        <td><%= link_to 'Destroy', product_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

