<body>



    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <center>
          <%= image_tag 'logo2.png', height: '250', width: '300' %>
        </center>
      </div>


      <% if params[:type].nil? %>
        <h2>Products</h2>
      <% else %>
        <h2><%= params[:type] %></h2>
        <% if params[:type] == 'Cutting Boards' %>
          <p style="font-size:16px;"">
            Don't see your state? Contact us at support@edpdx to request your state.
          </p>
        <% end %>
      <% end %>

      <% @products.each do |product| %>
        <div class="row">
            <div class="col-md-7">
              <%= image_tag @images[product['listing_id'].to_s]['results'][0]['url_570xN'] %>
              <%# link_to product do %>
                <%# Photo.where(:product_id => product.id, :is_main => 't').each do |photo| %>
                  <%# image_tag photo.avatar.url(:xlarge), class: "img-responsive", alt: photo.product.name %>
                <%# end %>
              <%# end %>
            </div>
            <div class="col-md-5">
                <h3><%= product['title'] %></h3>
                <h4>$<%= sprintf('%.2f', product['price']) %></h4>
                <p><%= product['description'].gsub("\n", "<br>").html_safe %></p>
                <a class="btn btn-primary" href="/products/<%= product['listing_id'] %>">View item</a>
            </div>
        </div>  <%#sdf%>
        <hr>
      <% end %>

<p>

