      <% if params[:type].nil? %>
        <h2>Products</h2>
      <% else %>
        <h2><%= params[:type] %></h2>
      <% end %>

      <% @products.each do |product| %>
        <div class="row">
            <div class="col-md-7">
              <%= link_to product do %>
                <% Photo.where(:product_id => product.id, :is_main => 't').each do |photo| %>
                  <%= image_tag photo.avatar.url(:xlarge), class: "img-responsive", alt: photo.product.name %>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-5">
              <%= product.photos[0]['image_url'] %>
                <h3><%= product.name %></h3>
                <h4>$<%= sprintf('%.2f', product.price) %></h4>
                <p><%= product.description %></p>
                <a class="btn btn-primary" href="/products/<%= product.id %>">View item</a>
            </div>
        </div>

        <hr>
      <% end %>

