      <%= image_tag photo.avatar.url(:xlarge), class: "img-responsive" %>
      <p>
      </p>
    <% end %>
  </div>
  <div class="col-sm-3">
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Dimensions:</strong><br>
      Height: <%= @product.height %><br>
      Width: <%= @product.width %><br>
      Thickness:
      <p>

      </p>


