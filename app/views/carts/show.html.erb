<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-11">
    <%# sql = "select round((extract(epoch from '2016-11-28 00:00:00'::TIMESTAMP) - extract(epoch from now()))/86400) as q" %>
    <%# result = ActiveRecord::Base.connection.execute(sql) %>
